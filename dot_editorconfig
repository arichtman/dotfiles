# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 2 space indentation
[*.{hcl,hcl.test,tf,tfvars,yaml,yml}]
indent_size = 2
indent_style = space

# 4 space indentation
[*.sh]
indent_size = 4
indent_style = space

[{Containerfile, Dockerfile}]
indent_size = 2
indent_style = space
